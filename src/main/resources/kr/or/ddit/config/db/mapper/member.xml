<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">
  <select id="getMember" parameterType="String" resultType="MemberVO">
    SELECT * 
    FROM users 
    WHERE userid = #{userid}
  </select>
  
  <select id="selectAllMember" resultType="MemberVO">
	SELECT *
	  FROM users 
  </select>
  
  <select id="selectAllMemberPage" parameterType="kr.or.ddit.common.model.PageVO" resultType="MemberVO">
	SELECT *
	FROM
	    (SELECT ROWNUM rn, a.* 
	     FROM
	        (SELECT *
	         FROM users
	         ORDER BY reg_dt DESC) a )    
	WHERE rn BETWEEN (#{page} -1) * #{pageSize} +1 AND #{page} * #{pageSize}
  </select>
  
  <select id="selectMemberTotalCount" resultType="int">
  	SELECT COUNT(*)
  	FROM users
  </select>
  
  <insert id="insertMember" parameterType="MemberVO">
	INSERT INTO users VALUES(#{userid}, #{usernm}, #{pass}, SYSDATE, #{alias}, #{addr1}, #{addr2}, #{zipcode}, #{filename}, #{realfilename})
  </insert>
  
<!--   <delete id="deleteMember" parameterType="String"> -->
<!--   	DELETE users -->
<!--   	WHERE userid = #{userid} -->
<!--   </delete> -->
  
  <update id="updateMember" parameterType="MemberVO">
  	UPDATE users SET usernm = #{usernm}, pass = #{pass}, alias = #{alias}, addr1 = #{addr1}, addr2 = #{addr2}, zipcode = #{zipcode}, realfilename=#{realfilename, jdbcType=VARCHAR}, filename=#{filename, jdbcType=VARCHAR} where userid=#{userid}
  </update>
  
</mapper>